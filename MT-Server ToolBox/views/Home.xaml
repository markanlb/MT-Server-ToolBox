<Grid
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	
	<Grid>
		<StackPanel Orientation="Vertical" Margin="5,5,0,0">
            
			<Label Content="Test Zone" HorizontalAlignment="Stretch" Height="40" FontWeight="Bold" FontSize="20" Foreground="LightSkyBlue" Margin="0,0,0,0" VerticalAlignment="Top" />
        
		    <GridSplitter HorizontalAlignment="Stretch" Foreground="White" Height="1" Margin="0,20,0,5" VerticalAlignment="Top"/>
			
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label Content="Test button (start-process)" Width="150"/>
                <Button x:Name="btnTest01" Content="Test" Width="80"/>
            </StackPanel>
			
			<StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Label Content="Test button (call operator)" Width="150"/>
                <Button x:Name="btnTest02" Content="Test" Width="80"/>
            </StackPanel>

        </StackPanel>
	
	
	
	
	
    </Grid>
	
</Grid>
